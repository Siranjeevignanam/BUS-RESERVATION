package busResv;

public class Bus {
	private int busNo;
	private boolean ac;
	private int capacity; //getter and setter methods
              private String Beginning;
              private String Destination;
	
	Bus(int no,boolean ac,int cap,String Begin,String Des){
		this.busNo = no;
		this.ac = ac;
		this.capacity = cap;
this.Beginning=Begin;
this.Destination=Des;
	}
	
	public int getBusNo(){ 
		return busNo;
	}
	
	public boolean isAc(){
		return ac;
	}
	public int getCapacity(){ 
		return capacity;
	}


public String getBeginning(){ 
		return Beginning;
	}
	
public String getDestination(){ 
		return Destination;
	}
	

	
	public void setAc(boolean val) { 
		ac = val;
	}
	
	public void setCapacity(int cap) { 
		capacity = cap;
	}
	public void setBeginning(String Begin) { 
		Beginning=Begin;
	}
public void setDestination(int cap) { 
		Destination=Des;
	}

	public void displayBusInfo(){
		System.out.println("Bus No:" + busNo);        
 System.out.println("" AC:" + ac);
System.out.println" Total Capacity: " + capacity);
System.out.println("Beginning:" + Beginning);
System.out.println("Destination: " + capacity);
	}
}
